{
  "name": "angel-app",
  "version": "0.0.1",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "build": "npm run electron:serve-tsc && ng build",
    "build:prod": "npm run build -- -c production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron:serve-tsc": "tsc -p tsconfig-serve.json",
    "local": "npm run electron:serve-tsc && electron . --serve",
    "electron:start": "ng build --base-href ./ && electron . --serve",
    "build:windows": "npm run build:prod && electron-builder build --windows",
    "package:windows": "electron-packager . --overwrite"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.1.0",
    "@angular/common": "^14.1.0",
    "@angular/compiler": "^14.1.0",
    "@angular/core": "^14.1.0",
    "@angular/forms": "^14.1.0",
    "@angular/platform-browser": "^14.1.0",
    "@angular/platform-browser-dynamic": "^14.1.0",
    "@angular/router": "^14.1.0",
    "electron-log": "^4.4.8",
    "electron-reload": "^2.0.0-alpha.1",
    "rxjs": "~7.5.0",
    "scriptjs": "^2.5.9",
    "tslib": "^2.3.0",
    "update-electron-app": "^2.0.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.1.2",
    "@angular/cli": "~14.1.2",
    "@angular/compiler-cli": "^14.1.0",
    "@types/jasmine": "~4.0.0",
    "@types/scriptjs": "^0.0.2",
    "@types/systemjs": "^6.1.1",
    "electron": "^20.0.3",
    "electron-builder": "^23.3.3",
    "electron-packager": "^16.0.0",
    "jasmine-core": "~4.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "systemjs": "^6.12.6",
    "typescript": "~4.7.2"
  }
}
